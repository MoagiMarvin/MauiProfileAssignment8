<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiProfileAssignment.ViewModels"
             x:Class="MauiProfileAssignment.Views.ProfilePage"
             BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#1a1a1a}">

    <ContentPage.BindingContext>
        <viewmodels:ProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid RowSpacing="25" Padding="20,35,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Stroke="{AppThemeBinding Light=#4a90e2, Dark=#64b5f6}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                    Margin="0,0,0,10"
                    Padding="20,15">
                <Label Text="Create Your Profile"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#2c3e50, Dark=#ecf0f1}"/>
            </Border>

            <!-- Profile Image Section -->
            <VerticalStackLayout Grid.Row="1" Spacing="15">
                <Frame HeightRequest="150" 
                       WidthRequest="150" 
                       CornerRadius="75"
                       IsClippedToBounds="True"
                       Padding="0"
                       HorizontalOptions="Center"
                       BorderColor="{AppThemeBinding Light=#4a90e2, Dark=#64b5f6}"
                       BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}">
                    <Grid>
                        <Image Source="{Binding ProfileImage}"
                               Aspect="AspectFill"
                               HeightRequest="150"
                               WidthRequest="150"/>
                        <Label Text="Tap to add photo"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#cccccc}"
                               IsVisible="{Binding ProfileImage, Converter={StaticResource IsNullConverter}}"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PickImageCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </VerticalStackLayout>

            <!-- Form Section -->
            <Border Grid.Row="2" 
                    Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#404040}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 15"
                    BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                    Padding="20">
                <VerticalStackLayout Spacing="20">
                    <!-- Name Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Full Name"
                               TextColor="{AppThemeBinding Light=#2c3e50, Dark=#ecf0f1}"
                               FontAttributes="Bold"/>
                        <Border StrokeShape="RoundRectangle 10"
                                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#404040}"
                                StrokeThickness="1"
                                Padding="15,0">
                            <Entry Text="{Binding Name}" 
                                   Placeholder="Enter your name"
                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                                   HeightRequest="45"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Surname Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Surname"
                               TextColor="{AppThemeBinding Light=#2c3e50, Dark=#ecf0f1}"
                               FontAttributes="Bold"/>
                        <Border StrokeShape="RoundRectangle 10"
                                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#404040}"
                                StrokeThickness="1"
                                Padding="15,0">
                            <Entry Text="{Binding Surname}"
                                   Placeholder="Enter your surname"
                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                                   HeightRequest="45"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email Address"
                               TextColor="{AppThemeBinding Light=#2c3e50, Dark=#ecf0f1}"
                               FontAttributes="Bold"/>
                        <Border StrokeShape="RoundRectangle 10"
                                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#404040}"
                                StrokeThickness="1"
                                Padding="15,0">
                            <Entry Text="{Binding EmailAddress}"
                                   Placeholder="Enter your email"
                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                                   Keyboard="Email"
                                   HeightRequest="45"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Bio Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Bio"
                               TextColor="{AppThemeBinding Light=#2c3e50, Dark=#ecf0f1}"
                               FontAttributes="Bold"/>
                        <Border StrokeShape="RoundRectangle 10"
                                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#404040}"
                                StrokeThickness="1"
                                Padding="15">
                            <Editor Text="{Binding Bio}"
                                    Placeholder="Tell us about yourself"
                                    PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                    TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                                    HeightRequest="120"
                                    AutoSize="TextChanges"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Buttons -->
                    <Grid ColumnSpacing="15" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Text="Save"
                                Command="{Binding SaveCommand}"
                                BackgroundColor="#4a90e2"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25"/>

                        <Button Grid.Column="1"
                                Text="Clear"
                                Command="{Binding ClearCommand}"
                                BackgroundColor="#e74c3c"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>